    <servlet>
        <servlet-name>GetProductServlet</servlet-name>
        <servlet-class>uts.isd.controller.ProductsServlets.GetProductServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GetAllProductServlet</servlet-name>
        <servlet-class>uts.isd.controller.ProductsServlets.GetAllProductServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    
    <!--    user-->
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>uts.isd.controller.UserServlets.AddUserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GetUserServlet</servlet-name>
        <servlet-class>uts.isd.controller.UserServlets.GetUserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    
    <!--    mapping-->
    <!--    Utility-->
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    
    <!--    Product-->
<!--    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/AddProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/EditProductServlet</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>GetProductServlet</servlet-name>
        <url-pattern>/GetProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllProductServlet</servlet-name>
        <url-pattern>/GetAllProductServlet</url-pattern>
    </servlet-mapping>
    <!--User-->
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/AddUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserServlet</servlet-name>
        <url-pattern>/GetUserServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
